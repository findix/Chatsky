<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN" ng-app="chatApp">
<head>
    <title>Chatsky</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
    <meta http-equiv="description" content="This is my page">

    <!--<link rel="stylesheet" href="stylesheets/bootstrap.min.css">-->
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>
<body>
<div id="wrap">
    <div id="main" class="clearfix">
        <!-- 背景云层 -->
        <div id="header">
            <div id="clouds">
                <div class="cloud-1" data-speed="35000"></div>
                <div class="cloud-2" data-speed="45000" data-delay="15000"></div>
                <div class="cloud-3" data-speed="40000"></div>
                <div class="cloud-4" data-speed="38000" data-delay="20000"></div>
            </div>
        </div>
        <!-- / #header -->

        <div id="content">
            <div class="container">
                <!-- 登录模块 -->
                <form id="login" method="post" action="" onsubmit="return checkForm(this);">
                    <div id="login_header"><i class="icon-home"></i>Chatsky</div>

                    <div id="login_content">
                    <span>
                        <input class="tip" name="email" type="email" maxlength="32" onclick="onClick(this);"
                               onblur="onBlur(this);">
                        <label for="username">邮箱</label>
                        <i class="icon-user"></i>
                        <div class="tooltip" data-text="填写您的邮箱">填写您的邮箱</div>
                    </span>
                    <span>
                        <input class="tip" name="password" type="password" maxlength="16" onclick="onClick(this);"
                               onblur="onBlur(this);">
                        <label for="password">密码</label>
                        <i class="icon-lock"></i>
                        <div class="tooltip" data-text="填写您的密码">填写您的密码</div>
                    </span>
                        <div class="option">

                        </div>
                    </div>
                    <!-- / #login_content -->

                    <div id="login_footer">
                        <div class="ing"></div>
                        <button id="login_btn" type="button">登录</button>
                    </div>
                    <!-- / #login_footer -->

                    <div><a id="register_link" href="javascript:void(0);">新用户注册</a></div>
                </form>
                <!-- / #login -->

                <!-- 注册模块 -->
                <form id="register" method="post" action="" onsubmit="return checkForm(this);">
                    <div id="register_header"><i class="icon-home"></i>新用户注册</div>

                    <div id="register_content">
                    <span>
                        <input class="tip" name="email" type="email" maxlength="32" onclick="onClick(this);"
                               onblur="onBlur(this);">
                        <label for="realname">邮箱</label>
                        <i class="icon-user"></i>
                        <div class="tooltip" data-text="填写您的邮箱">填写您的邮箱</div>
                    </span>
                    <span>
                        <input class="tip" name="password" type="password" maxlength="16" onclick="onClick(this);"
                               onblur="onBlur(this);">
                        <label for="ID">密码</label>
                        <i class="icon-lock"></i>
                        <div class="tooltip" data-text="填写6~16位字母或者数字">填写6~16位字母或者数字</div>
                    </span>
                    <span>
                        <input class="tip" name="password2" type="password" maxlength="16" onclick="onClick(this);"
                               onblur="onBlur(this);">
                        <label for="password">密码验证</label>
                        <i class="icon-lock"></i>
                        <div class="tooltip" data-text="请再填写一次您的密码">请再填写一次您的密码</div>
                    </span>
                    </div>
                    <!-- / #register_content -->

                    <div id="register_footer">
                        <div class="ing"></div>
                        <button id="register_btn" type="button">注册</button>
                    </div>
                    <!-- / #register_footer -->

                    <div><a id="login_link" href="javascript:void(0);">返回登录</a></div>
                </form>
                <!-- / #register -->

            </div>
            <!-- / .container -->
        </div>
        <!-- / #content-->
    </div>
</div>
<!-- 页脚版权信息 -->
<% include public/footer %>
<!-- js脚本 -->
<% include public/js %>
<script src="/javascripts/login.js"></script>
</body>

</html>

